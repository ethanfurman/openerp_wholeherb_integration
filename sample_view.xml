<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="wholeherb_integration_sample_memo_tree">
            <field name="name">view.wholeherb_integration.sample_memo.list</field>
            <field name="model">wholeherb_integration.sample_memo</field>
            <field name="arch" type="xml">
                <tree string="Sample Memo">
                    <field name="order_num"/>
                    <field name="order_date"/>
                    <field name="customer_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="wholeherb_integration_sample_memo_form">
            <field name="name">view.wholeherb_integration.sample_memo.form</field>
            <field name="model">wholeherb_integration.sample_memo</field>
            <field name="arch" type="xml">
                <form string="Sample Memo" version="7.0">
                    <group>
                        <group>
                            <field name="order_num"/>
                            <field name="customer_id"/>
                            <field name="customer_contact_id"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="order_date"/>
                            <field name="promise_date"/>
                            <field name="ship_date"/>
                            <field name="shipping_id"/>
                        </group>
                        <separator colspan="4"/>
                        <field name="lot_ids" colspan="4" nolabel="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_wholeherb_integration_sample_memo">
            <field name="name">Sample Memos</field>
            <field name="res_model">wholeherb_integration.sample_memo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="wholeherb_integration_sample_memo_tree"/>
        </record>

        <menuitem
            name="Sample Memo"
            id="wholeherb_integration_sample_memo"
            parent="base.menu_sales"
            action="action_wholeherb_integration_sample_memo"
            />
    </data>
</openerp>

