<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_fis_integration_config_settings" model="ir.ui.view">
            <field name="name">fis integration settings</field>
            <field name="model">fis_integration.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure FIS Integration" version="7.0" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>

                    <group groups="base.group_multi_company">
                        <div>
                            <label for="company_id" string="Select Company"/>
                            <field name="company_id"
                                widget="selection"
                                on_change="onchange_company_id(company_id, context)"
                                class="oe_inline"/>
                        </div>
                    </group>

                    <separator string="Module names to use for integration"/>
                    <group col="4">
                        <div>
                            <div>
                                <label for="product_integration"/>
                                <field name="product_integration" placeholder="e.g. company_product" class="oe_inline"/>
                            </div>
                            <div>
                                <label for="product_category_integration"/>
                                <field name="product_category_integration" placeholder="e.g. company_product" class="oe_inline"/>
                            </div>
                            <div>
                                <label for="customer_integration"/>
                                <field name="customer_integration" placeholder="e.g. company_customer" class="oe_inline"/>
                            </div>
                            <div>
                                <label for="supplier_integration"/>
                                <field name="supplier_integration" placeholder="e.g. company_supplier" class="oe_inline"/>
                            </div>
                            <div>
                                <label for="employee_integration"/>
                                <field name="employee_integration" placeholder="e.g. company_employee" class="oe_inline"/>
                            </div>
                        </div> 
                    </group>
                </form>
            </field>
        </record>

        <record id="action_fis_integration_config" model="ir.actions.act_window">
            <field name="name">Configure FIS Integration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fis_integration.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_fis_integration_config" name="FIS Integration" parent="base.menu_config"
            sequence="14" action="action_fis_integration_config"/>

    </data>
</openerp>
